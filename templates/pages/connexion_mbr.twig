                            <label for="mail">Mail :</label><br/>
                            <input class="mail" type="text" id="mail" name="mail"><div class="errorjs">.</div><br/>

                            <label for="mdp">Mot de passe :</label><br/>
                            <input type="password" id="mdp" name="mdp"><div class="errorjs">.</div><br/>

                            <label for="mdp2">Mot de passe :</label><br/>
                            <input type="password" id="mdp2" name="mdp2"><div class="errorjs">.</div><br/>

                            <input class="envoi bouton" type="submit" name="inscriptionmbr" value="CONNEXION">
                        </form>
                        <div class="erreur" ><p>{{msg2_membre}}</p></div>
                    </div>
                </div>
                
          
            </div>

        </section>

{% endblock %}